<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="slam_methods" default="gmapping" doc="slam type [gmapping, cartographer, hector, karto, frontier_exploration]"/>
  <!-- <arg name="map_file" default="$(find assignment)/maps/train_env.yaml"/>>-->
  <arg name="configuration_basename" default="turtlebot3_lds_2d.lua"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- followbot -->
  <include file="$(find followbot)/launch/turtlebot3_training.launch">
    <arg name="model" value="$(arg model)"/>
  </include>

  <!-- Navigation: -->
 <include file="$(find assignment)/launch/assignment_navigation/assignment_navigation.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="open_rviz" value="$(arg open_rviz)"/>
    <arg name="move_forward_only" value="$(arg move_forward_only)" />
 </include>

  <!-- rviz -->
  <!-- <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find assignment)/rviz/assignment.rviz"/>
  </group> -->
  <!-- <node pkg="assignment" type="assignment.py" name="assignment" output="screen"/> -->
</launch>